.table {
  border:1px solid #dadada;
  width: 100%;
}
.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.th,.td {
  padding: 10px;
  text-align: center;
  width:100%
}
.th {
  font-weight: 400;
  background-color: #dadada
}
 
.hang .table{
  width: 100%;
  background: #E8E8E8;
}
.hang .tr {
     width: 100%;
     display: flex;
    justify-content: space-between;
}
.hang .th,.td {
